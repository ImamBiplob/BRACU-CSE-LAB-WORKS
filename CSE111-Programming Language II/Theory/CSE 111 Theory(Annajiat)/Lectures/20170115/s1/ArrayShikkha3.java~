public class ArrayShikkha2{
    public static void main (String[] args){ 
        //way 1 of 3:
        int[] a = new int [3];
        a[0]=10;
        a[1]=20;
        a[2]=30;
        
        //way 2 of 3: static initilizer syntax
        int[] a={10,20,30};
        
        //way 3 of 3: static initilizer syntax
        int[] a;
        a =new int[]{10,20,30};
        
        a =new int[]{10,20,30,40};
        
    }
}