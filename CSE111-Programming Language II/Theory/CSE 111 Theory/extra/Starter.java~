public class Starter {
    public static void main(String[] args){
        Runtime r=Runtime.getRuntime();
        Process p=null;
        
        try {
            String notepad = “c:\\windows\\notepad.exe”;
            String wordpad = “c:\\windows\\regedit.exe”;
            
            p = r.exec(notepad);
            p = r.exec(wordpad);
            
        }catch(Exception e) {
            System.out.println(“error===”+e.getMessage());
            e.printStackTrace();
        }
    }
}